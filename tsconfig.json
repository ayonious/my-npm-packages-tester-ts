{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "index.ts"]
}
